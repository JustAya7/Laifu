<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayBackground"
    tools:context=".fragment.DeviceFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/ll_my_LaiFu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My LaiFuer"
            android:textSize="30dp"
            android:textColor="@color/gray"
            android:layout_gravity="center"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/iv_my_LaiFu"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/ic_shopping_cart"
        android:layout_marginTop="80dp"
        android:layout_below="@id/ll_my_LaiFu"
        android:layout_centerHorizontal="true"/>
    <RelativeLayout
        android:layout_below="@+id/iv_my_LaiFu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

    </RelativeLayout>

    <TableRow
        android:layout_above="@id/tr_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="20dp">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/rl_background_mylaifu_data"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_laiFu_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="电源"
                android:textColor="@color/gray_dark"/>

            <TextView
                android:layout_below="@id/tv_laiFu_switch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="@string/on"
                android:textColor="@color/green"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rl_background_mylaifu_data"
            android:layout_height="100dp"
            >

            <TextView
                android:id="@+id/tv_laiFu_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="电量"
                android:textColor="@color/gray_dark"/>
            <TextView
                android:layout_below="@id/tv_laiFu_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="100%"
                android:textColor="@color/green"/>

        </RelativeLayout>

    </TableRow>
    <TableRow
        android:id="@+id/tr_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_alignParentBottom="true">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@drawable/rl_background_mylaifu_data"
            android:layout_marginRight="10dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/tv_laiFu_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="速度"/>
            <TextView
                android:layout_below="@id/tv_laiFu_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="5  km/h"
                android:textColor="@color/gray_dark"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rl_background_mylaifu_data"
            android:layout_marginStart="10dp">

            <TextView
                android:id="@+id/tv_laiFu_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="@string/weight"/>
            <TextView
                android:layout_below="@id/tv_laiFu_weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:textSize="20sp"
                android:text="1 kg"
                android:textColor="@color/gray_dark"/>

        </RelativeLayout>

    </TableRow>

</RelativeLayout>